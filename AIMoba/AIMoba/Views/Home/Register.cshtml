<link type="text/css" rel="stylesheet" href="~/css/design.css" />
<form asp-controller="Home">
    <div class="px-5 pb-5"></div>
    <div class="row mt-3">
        <div class="col-3"></div>
        <div class="col-6">
            <h1 class="title">Regisztrálj!</h1>
            <div class="mt-5">
                <div class="form-group w-100">
                    <label for="Username" class="mb-3">Felhasználónév</label>
                    <input type="text" id="name" name="name" class="form-control w-100" />
                </div>
                <div class="form-group row">
                    <div class="col-6">
                        <label for="password" class="my-3">Jelszó</label>
                        <input type="password" id="password" class="form-control w-100" name="password" />
                    </div>
                    <div class="col-6">
                        <label for="repassword" class="my-3">Jelszó újra</label>
                        <input type="password" id="repassword" class="form-control w-100" name="repassword" />
                    </div>
                </div>
            </div>
        </div>
        <div class="col-3"></div>
    </div>
    <div class="row mt-2">
        <div class="col-3"></div>
        <div class="col-3">
            <input class="w-100 btn btn-lg btn-block mx-0" asp-action="RedirectToLogin" type="submit" value="Regisztráció" />
        </div>
        <div class="col-3">
            <input class="w-100 btn btn-lg btn-block mx-0" type="submit" value="Bejelentkezés" asp-action="Login" />
        </div>
        <div class="col-3"></div>
    </div>
</form>


