

<link rel="stylesheet"
      href="~/css/custom-lobby-stiles.css" />
<script src="~/js/invited.js"></script>

<!-- Felugró ablak eleje -->

<div id="back-cover"></div>
<div id="add-player-prompt" class="pt-3 px-3 d-flex flex-column justify-content-around">
    <h3 class="text-center custom-glowing-title">Meghívtak!</h3>
    <form asp-controller="Home" method="post">
        <div class="form-group">
            <label>Meghívtak a <span id="invitingroom"></span> nevű szobába, elfogadod a meghívást?</label>
            <input hidden id="playerName" name="playerName" type="text" value="@ViewBag.name" />
            <input hidden id="roomName" name="roomName" type="text" value="" />
            <div class="pt-3 clearfix">
                <input type="button" id="cancel-player-addition" onclick="toggleLayers()" value="Mégse" class="btn btn-danger p-2 d-inline float-right">
                <input type="submit" id="invite-player" asp-action="RedirectToJoinRoom" value="Elfogadás" class="btn btn-success p-2 d-inline float-right mr-3">
            </div>
        </div>
    </form>
</div>

<!-- Felugró ablak vége -->

<div class="container">
    <div class="text-center">
        <h1 id="pName">Hello @ViewBag.name!</h1>
        <div class="container text-center ">
            <a href="@Url.Action("CreateRoom", "Home", new {roomName = ViewBag.name})" class="w-50 mb-3">
                Játék létrehozása
            </a>
            <a href="@Url.Action("Ranking", "Home", new {roomName = ViewBag.name})" class="w-50 mb-3">
                Ranklista
            </a>
            <a href="@Url.Action("Login", "Home") class="w-50 mb-3">
                Kijelentkezés
            </a>
        </div>
    </div>
</div>

<div class="container">
    <div class="row">&nbsp;</div>
    <div class="row">
        <div class="col-2"><label>Üzenet</label></div>
        <div class="col-4"><input type="text" id="messageInput" /></div>
    </div>
    <div class="row">&nbsp;</div>
    <div class="row">
        <div class="col-6">
            <input type="button" id="sendButton" value="Üzenet küldése" />
        </div>
    </div>
</div>
<div class="row">
    <div class="col-12">
        <hr />
    </div>
</div>
<div class="row">
    <div class="col-12">
        <textarea readonly id="messageList">"Üdvözöljük a group chat-en"
</textarea>
    </div>
</div>
<script src="~/js/chat.js"></script>