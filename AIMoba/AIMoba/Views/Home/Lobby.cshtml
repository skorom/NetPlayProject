

<link rel="stylesheet"
      href="~/css/custom-lobby-stiles.css" />
<script src="~/js/invited.js"></script>

<!-- Felugró ablak eleje -->

<div id="back-cover"></div>
<div id="add-player-prompt">
    <div class="mx-auto pt-3 px-3">
        <h3 class="text-center custom-glowing-title">Meghívtak!</h3>
        <form asp-controller="Home" method="post">
            <div class="form-group">
                <label>Szia meg lettel hívva a <span id="invitingroom"></span> nevű szobába, elfogadod a meghívást?</label>
                <input hidden id="playerName" name="playerName" type="text" value="@ViewBag.name" />
                <input hidden id="roomName" name="roomName" type="text" value="" />
                <div class="pt-3 clearfix">
                    <input type="button" id="cancel-player-addition" value="Mégse" class="btn btn-danger p-2 d-inline float-right">
                    <input type="submit" id="invite-player" asp-action="RedirectToJoinRoom" value="Elfogadás" class="btn btn-success p-2 d-inline float-right mr-3">
                </div>
            </div>
        </form>
    </div>
</div>

<!-- Felugró ablak vége -->

<div class="container">
    <div class="text-center">
        <h1 class="large bold mb-5 custom-glowing-title">Hello @ViewBag.name!</h1>
        <div class="container text-center ">
            <a href="@Url.Action("CreateRoom", "Home", new {roomName = ViewBag.name})" class="btn btn-info w-50 mb-3">
                Játék létrehozása
            </a>
            <a href="#" class="btn btn-info w-50 mb-3">
                Comeing soon
            </a>
            <a href="#" class="btn btn-info w-50 mb-3">
                Coming soon
            </a>
        </div>
    </div>
</div>